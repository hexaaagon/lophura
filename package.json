{
  "name": "lophura",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "lophura:start": "pnpm --filter=lophura run start",
    "lophura:build": "pnpm --filter=lophura run build",
    "server:build": "pnpm --filter=@lophura/server run build",
    "build": "turbo build",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.3.0",
    "typescript": "5.5.4"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  }
}
